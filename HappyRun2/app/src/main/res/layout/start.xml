<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292929">
    <include layout="@layout/title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="60dp"
            android:text="车型："
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Spinner
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:id = "@+id/Spinner_car"
            android:layout_width = "match_parent"
            android:layout_height ="wrap_content" >
        </Spinner >
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.zy.happyrun.Start.UI.DashboardView4
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/dashboard_view_3"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.example.zy.happyrun.Start.UI.DashboardView1
            android:id="@+id/dashboard_view_1"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.example.zy.happyrun.Start.UI.DashboardView1
            android:id="@+id/dashboard_view_2"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:text="累计行程为  000  公里"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:text="熄火奖励积分为  000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>